<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/iv_main_menu"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/image_menu"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/padding"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/main_jadwal_sholat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="15dp"
                android:layout_marginBottom="@dimen/margin_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_jadwal_sholat"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/image_sholat"
                        android:layout_marginRight="@dimen/padding"
                        android:contentDescription="TODO"
                        android:layout_marginEnd="@dimen/padding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/iv_jadwal_sholat"
                        android:text="@string/jadwal_sholat"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/main_produk_halal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="15dp"
                android:layout_marginBottom="@dimen/margin_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/iv_produk_halal"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/image_halal"
                        android:layout_marginRight="@dimen/padding"
                        android:contentDescription="TODO"
                        android:layout_marginEnd="@dimen/padding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/iv_produk_halal"
                        android:text="Produk Halal"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/main_ayatpilihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="15dp"
                android:layout_marginBottom="@dimen/margin_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/iv_main_ayat_pilihan"
                        android:layout_width="75dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/image_ayat"
                        android:layout_marginRight="@dimen/padding"
                        android:contentDescription="TODO"
                        android:layout_marginEnd="@dimen/padding" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/iv_main_ayat_pilihan"
                        android:text="@string/ayat_pilihan"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="25sp"
                        android:layout_toEndOf="@id/iv_main_ayat_pilihan" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>